<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.daking.app.sample.view.service.ServiceTestActivity">

    <Button
        android:id="@+id/btn_serviceTest_intentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/act_serviceTest_intentService"/>

    <Button
        android:id="@+id/btn_serviceTest_startFg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/act_serviceTest_startFg"/>

    <Button
        android:id="@+id/btn_serviceTest_stopFg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/act_serviceTest_stopFg"/>

    <Button
        android:id="@+id/btn_serviceTest_startBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/act_serviceTest_startBg"/>

    <Button
        android:id="@+id/btn_serviceTest_stopBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/act_serviceTest_stopBg"/>

    <Button
        android:id="@+id/btn_serviceTest_startProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/act_serviceTest_startProcess"/>

    <Button
        android:id="@+id/btn_serviceTest_stopProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/act_serviceTest_stopProcess"/>

</LinearLayout>
