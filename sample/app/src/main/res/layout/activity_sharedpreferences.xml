<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.daking.app.sample.view.data.SharedPreferencesActivity">

    <EditText
        android:id="@+id/et_sharedPrefer_Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="此APP的口令"
        android:textSize="16sp"
        android:textColor="#000"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_sharedPrefer_Code"
        android:orientation="vertical"
        android:padding="5dp">
        <Button
            android:id="@+id/btn_sharedPrefer_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_sharedPrefer_btn1"/>
        <Button
            android:id="@+id/btn_sharedPrefer_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_sharedPrefer_btn2"/>
        <Button
            android:id="@+id/btn_sharedPrefer_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_sharedPrefer_btn3"/>
    </LinearLayout>


</RelativeLayout>
